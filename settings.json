    "button": false
  },
  "formatter": {
    "language_server": {
      "name": "biome"
    }
  },
  "features": {
    "copilot": true,
    "theme": "macOS Classic Dark",
    "buffer_font_size": 14,
    "inline_completion_provider": "copilot",
    "buffer_font_family": "CommitMono Nerd Font",
    "vim_mode": true,
    "cursor_blink": false,
    "relative_line_numbers": true,
    "scrollbar": {
      "show": "never"
