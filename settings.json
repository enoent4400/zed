      "quick_actions": false
    },
    "preferred_line_length": 100,
    "soft_wrap": "preferred_line_length",
    "use_autoclose": true,
    "git": {
      "inline_blame": {
        "enabled": true,
        "delay_ms": 500
      }
    },
    "terminal": {
      "alternate_scroll": "off",
      "blinking": "terminal_controlled",
      "copy_on_select": true,
      "font_family": "CommitMono Nerd Font",
